<Window x:Class="CreateLinks.View.FolderWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CreateLinks.View"
             mc:Ignorable="d" 
             Height="500"
             Width="650"
             Title="Окно выбора файлов"
             WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BitmapImage x:Key="IconImage" UriSource="pack://application:,,,/CreateLinks;component/Resources/Icons/RevitFile.ico"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Отображаемые файлы" 
          Grid.Row="0"
          Margin="5">
            <ListBox x:Name="MyListBox" 
                 Margin="10" HorizontalAlignment="Stretch" SelectionMode="Extended"
                 ItemsSource="{Binding FileNames}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image Source="{StaticResource IconImage}" Width="16" Height="16"/>
                            <TextBlock Text="{Binding}" Margin="10,0,10,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                Content="Add"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="10, 5, 5, 5" 
                Click="AddButton_Click"/>
            <Button Grid.Column="1"
                Content="Remove"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="5, 5, 5, 5" 
                Click="RemoveButton_Click"
        />
        </Grid>

        <Button Grid.Row="2"
        Content="Select"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Margin="10,5,10,10" 
        Click="SelectButton_Click"
        />
    </Grid>
</Window>
