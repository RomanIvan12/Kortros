<Window x:Class="Kortros.General.ExcelSync.ExcelSyncWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kortros.General.ExcelSync"
             mc:Ignorable="d" 
             Height="500" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <DockPanel LastChildFill="False">
            <Label DockPanel.Dock="Top" HorizontalContentAlignment="Center">
                <TextBlock Text="{Binding FileName}" FontWeight="Bold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FileName}" Value="{x:Null}">
                                    <Setter Property="Text" Value="Выберите файл"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Label>
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical" VerticalAlignment="Stretch">
                <Button DockPanel.Dock="Left" Content="Выберите файл" x:Name="SelectFileButton" Click="SelectFileButton_Click"/>
                <Label  Margin="0,5,0,0" Content="Параметры" Foreground="Gray"/>
                <TextBlock Text="{Binding MarkParName}" ToolTip="Параметр марки. Берется из первой ячейки таблицы" />
                <TextBox Margin="0,5,0,0" Text="{Binding TypeMarkParName, Mode=TwoWay}" ToolTip="Параметр марки типа" />
                <CheckBox Margin="0,15,0,0" Content="Только выбранные / на виде" IsChecked="{Binding UpdateOnlySelected}"/>
                <CheckBox x:Name="UseCategoryCheckBox" Margin="0,5,0,0" Content="Выбраной категории" IsChecked="False"/>
                <ComboBox ItemsSource="{Binding Categories}" DisplayMemberPath="Name" SelectedValue="{Binding SelectedCategory, Mode=TwoWay}"
                      Visibility="{Binding ElementName=UseCategoryCheckBox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                </ComboBox>
            </StackPanel>
            <RichTextBox
            Margin="0,5,0,5"
            Name="richTB"
            DockPanel.Dock="Top"
            IsReadOnly="True"
            Height="200"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Auto" BorderBrush="{x:Null}"
            >
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </RichTextBox.Resources>
                <FlowDocument>
                    <Paragraph>
                        <Run Text="{Binding WarningMessage, Mode=OneWay}" Foreground="Red" />
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <DockPanel DockPanel.Dock="Bottom" HorizontalAlignment="Left">
                <Button x:Name="RunButton" Click="RunButton_Click"  Padding="5" Margin="0,0,5,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Ready}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    Обновить
                </Button>
                <Button x:Name="CloseButton" Click="CloseButton_Click"  Padding="5" Background="White">Закрыть</Button>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
