<Window x:Class="Kortros.General.UpdateParameters.Data.ShowDataWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kortros.General.UpdateParameters.Data"
             mc:Ignorable="d" 
             Height="450" Width="1200">
    <Grid Margin="20">
        <DockPanel LastChildFill="False">
            <DataGrid DockPanel.Dock="Top" Width="Auto"
                      ItemsSource="{Binding DataList}" AutoGenerateColumns="False" HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch" CanUserAddRows="False" CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding ElementId}" 
                        Header="ID" Width="60" CanUserResize="True"/>
                    <DataGridTextColumn Binding="{Binding ElementName}" 
                        Header="Семейство и типоразмер" Width="220" CanUserResize="True"/>
                    <DataGridTextColumn Binding="{Binding ParameterName}" 
                        Header="Параметр" Width="160" CanUserResize="True"/>
                    <DataGridTextColumn Binding="{Binding OldValue}"
                        Header="Старое значение" Width="150" CanUserResize="True"/>
                    <DataGridTextColumn Binding="{Binding NewValue}"
                        Header="Новое значение" Width="150" CanUserResize="True"/>
                    <DataGridTextColumn Binding="{Binding Status}"
                        Header="Статус" Width="80" CanUserResize="True"/>
                    <DataGridTextColumn Binding="{Binding ErrorMsg}"
                        Header="Сообщение об ошибке" Width="*" CanUserResize="True"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button DockPanel.Dock="Bottom" x:Name="OkButton" Content="OK"
                    Width="100" Padding="5" HorizontalAlignment="Right"
                    Click="OkButton_Click"/>
        </DockPanel>
    </Grid>
</Window>
