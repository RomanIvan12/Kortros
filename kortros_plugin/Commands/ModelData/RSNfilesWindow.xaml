<Window
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kortros.Commands.ModelData"
             xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Kortros.Commands.ModelData.RSNfilesWindow"
             mc:Ignorable="d" 
             Height="500"
             Width="650"
             Title="Окно выбора файлов с ">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Server name or IP"
                  Grid.Row="0"
                  Margin="5">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="ServerIPs"
                          SelectionChanged="ServerIPs_SelectionChanged"
                          Grid.Column="0"
                          Margin="5"
                          IsEditable="False"
                          SelectedValue="Выберите IP сервера"/>
                <ComboBox x:Name="ProjectNumber"
                          Grid.Column="1"
                          Margin="5" 
                          IsEditable="True"
                          SelectedValue="Номер проекта"/>
                <Button x:Name="Pick"
                        Content="Выбрать"
                        Grid.Column="2"
                        Margin="5,5,5,5" 
                        Click="Pick_Click"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Отображаемые файлы" 
                  Grid.Row="1"
                  Margin="5">
            <ScrollViewer x:Name="Scroll">
                <StackPanel x:Name="RevitFiles"
                                Grid.Column="1"
                                VerticalAlignment="Stretch"
                                Margin="5"/>
            </ScrollViewer>
        </GroupBox>
        <Grid 
            Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="CheckAll"
                    Click="CheckAllChains"
                    Grid.Column="0"
                    Content="Check All"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="10, 5, 5, 5"/>
            <Button x:Name="UnCheckAll"
                    Click="UnCheckAllChains"
                    Grid.Column="1"
                    Content="Uncheck All"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="5, 5, 5, 5"/>
            <Button x:Name="ToggleAll"
                    Click="ToggleAllChains"
                    Grid.Column="2"
                    Content="Toggle All"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="5, 5, 10, 5"/>
        </Grid>
        
        <Button x:Name="Select"
                Grid.Row="3"
                Content="Select"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="10,5,10,10" 
                Click="Select_Click"/>
    </Grid>
</Window>
