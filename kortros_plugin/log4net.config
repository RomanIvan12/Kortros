<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type ="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
	</configSections>

	<log4net>
		<root>
			<level value="INFO" />
			<appender-ref ref="Updater" />
		</root>

		<appender name="Updater" type="log4net.Appender.FileAppender">
			<layout name="PatternLayout" type="log4net.Layout.PatternLayout">
				<ConversionPattern value="%date{yyyy-MM-dd HH:mm:ss} [%class] [%level] [%method] - %message%newline"/>
			</layout>
			<File value="Documents\Logger\Updater.log"/>
			<AppendToFile value ="True"/>
		</appender>
	</log4net>
</configuration>