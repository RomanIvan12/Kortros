<Window x:Class="ProgressBar.BarWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProgressBar"
             xmlns:vm="clr-namespace:ProgressBar"
             mc:Ignorable="d" 
             Title="Пример ProgressBar" Height="150" Width="300"
             WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <vm:ProgressViewModel x:Key="ViewModel"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource ViewModel}">
        <ProgressBar Minimum="0" Maximum="100"
                     Height="30" VerticalAlignment="Top" Margin="10"
                     Value="{Binding ProgressValue}"/>
        <TextBlock Text="{Binding ProgressText}"
                   VerticalAlignment="Top" Margin="10, 50, 10, 0"/>
        <Button Content="Начать" Width="100" Height="30"
                VerticalAlignment="Bottom" Margin="10"
                HorizontalAlignment="Right"
                Command="{Binding StartCommand}"/>
    </Grid>
</Window>
