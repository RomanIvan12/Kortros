<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type ="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
	</configSections>
	
	<log4net>
		<logger name="LogName1">
			<level value="INFO" />
			<appender-ref ref="Test1" />
		</logger>
		
		<logger name="LogName2">
			<level value="INFO" />
			<appender-ref ref="Test2" />
		</logger>
			
		<appender name="Test1" type="log4net.Appender.FileAppender">
			<layout name="PatternLayout" type="log4net.Layout.PatternLayout">
				<ConversionPattern value="%date{yyyy-MM-dd HH:mm:ss} [%class] [%level] [%method] - %message%newline"/>
			</layout>
			<File value="C:\Users\IvannikovRV\Documents\Logger\Test1.log"/>
			<Name value= "Test1_appender"/>
			<AppendToFile value ="True"/>
		</appender>

		<appender name="Test2" type="log4net.Appender.FileAppender">
			<layout name="PatternLayout" type="log4net.Layout.PatternLayout">
				<ConversionPattern value="%date{yyyy-MM-dd HH:mm:ss} [%class] [%level] [%method] - %message%newline"/>
			</layout>
			<File value="C:\Users\IvannikovRV\Documents\Logger\Test2.log"/>
			<Name value= "Test2_appender"/>
			<AppendToFile value ="True"/>
		</appender>
	</log4net>
</configuration>