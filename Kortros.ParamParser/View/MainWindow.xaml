<Window x:Class="Kortros.ParamParser.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Kortros.ParamParser.View"
        xmlns:vm="clr-namespace:Kortros.ParamParser.ViewModel"
        xmlns:converters="clr-namespace:Kortros.ParamParser.ViewModel.ValueConverters"
        xmlns:uc="clr-namespace:Kortros.ParamParser.View.Controls"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Height="650" Width="1200"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"

        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        TextElement.FontWeight="Light"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        Style="{DynamicResource MaterialDesignWindow}"

        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light"
                                             ColorAdjustment="{materialDesign:ColorAdjustment}"
                                             PrimaryColor ="Grey" 
                                             SecondaryColor="Red"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/themes/MaterialDesign3.Defaults.xaml"/>
                <ResourceDictionary>
                    <vm:ParamStackVM x:Key="vm_paramstack"/>
                    <vm:ImageSliderVM x:Key="SlideVm"/>
                    <vm:IndexToImageConverter x:Key="IndexToImageConverter"/>
                    <converters:BuiltInToStringConverter x:Key="ToName"/>
                    <converters:NullToBoolConverter x:Key="NullToBool"/>
                    <uc:ParamInitControl x:Key="userInitControl"/>
                    <uc:ParamTargControl x:Key="userTargControl"/>

                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Padding" Value="4"/>
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="materialDesign:RippleAssist.IsCentered" Value="True"/>
                        <Setter Property="materialDesign:RippleAssist.ClipToBounds" Value="False"/>
                    </Style>

                    <Style TargetType="materialDesign:PackIcon">
                        <Setter Property="Foreground" Value="#FF9A0F0F"/>
                    </Style>

                    <x:Array Type="{x:Type BitmapImage}" x:Key="ImageCollection">
                        <BitmapImage UriSource="pack://application:,,,/Kortros.ParamParser;component/Icons/sl1.png"/>
                        <BitmapImage UriSource="pack://application:,,,/Kortros.ParamParser;component/Icons/sl2.png"/>
                        <BitmapImage UriSource="pack://application:,,,/Kortros.ParamParser;component/Icons/sl3.png"/>
                    </x:Array>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Window.Resources>
    <Grid>
        <Grid.LayoutTransform>
            <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
        </Grid.LayoutTransform>
        <Border Background="{DynamicResource MaterialDesignPaper}">
            <Grid>
                <!-- Создаем область верхнего бара -->
                <Grid VerticalAlignment="Top" 
                      Background="{DynamicResource PrimaryHueMidBrush}" 
                      Height="40"
                      MouseDown="TitleBar_MouseDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Лого -->
                    <Image Source="pack://application:,,,/Kortros.ParamParser;component/Icons/logo.png" Width="40" Height="40" Margin="0"
                           />
                    <!-- Название программы -->
                    <TextBlock Text="Пакетный перенос значений параметров" VerticalAlignment="Center" FontSize="18" FontWeight="Bold" Grid.Column="1" Margin="10,0,0,0"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="2" HorizontalAlignment="Right">

                        <Button Content="X" Width="30" Height="30" Click="ButtonClose_Click"
                                Margin="0,0,10,0"/>
                    </StackPanel>
                </Grid>

                <!-- Основной контент -->
                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,40,0,0">
                    <Grid>
                        <TabControl BorderThickness="0" 
                                    
                                    Margin="5,5,0,5"
                                    Padding="5,5,5,0"
                                    Style="{DynamicResource MaterialDesignFilledTabControl}"
                                    materialDesign:ColorZoneAssist.Mode="Custom"
                                    materialDesign:ColorZoneAssist.Foreground="#666666"
                                    materialDesign:ColorZoneAssist.Background="#FFF1F1F1"
                                    TabStripPlacement="Left" Background="#FFF1F1F1" Grid.RowSpan="2">
                            <TabControl.ItemContainerStyle>
                                <Style TargetType="TabItem" BasedOn="{StaticResource MaterialDesignTabItem}">
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="materialDesign:ColorZoneAssist.Foreground" Value="Red" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TabControl.ItemContainerStyle>
                            <TabItem Height="200"
                                     ToolTip="Настройка правил сопоставления параметров">
                                <TabItem.Header>
                                    <materialDesign:PackIcon Kind="GearOutline" Width="50" Height="50"
                                                             HorizontalAlignment="Left"
                                                             VerticalAlignment="Center"
                                                             Foreground="#FF6D6D6D"/>
                                </TabItem.Header>
                                <Grid DataContext="{StaticResource vm_paramstack}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="50"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Текущая конфигурация"
                                                           VerticalAlignment="Center"
                                                           Margin="5"
                                                           FontWeight="Medium"/>
                                        <ComboBox Grid.Column="1"
                                                  Margin="8"
                                                  VerticalAlignment="Center"
                                                  VerticalContentAlignment="Center"
                                                  Height="30"
                                                  ItemsSource="{Binding Configs}"
                                                  SelectedItem="{Binding SelectedConfig, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                               VerticalAlignment="Center"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" FontWeight="Medium"
                                               Content="Введите имя конфигурации"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Margin="10,0,0,0"/>
                                        <TextBox Grid.Column="1"
                                                 Height="35"
                                                 VerticalContentAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 Margin="5"
                                                 materialDesign:HintAssist.Hint="Наименование конфигурации"
                                                 materialDesign:HintAssist.IsFloating="True"
                                                 Text="{Binding ConfigName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <Button Grid.Column="2"
                                                Height="40"
                                                Margin="5"
                                                Command="{Binding NewConfigCommand}"
                                                CommandParameter="{Binding ConfigName}"
                                                ToolTip="Добавить новую конфигурацию"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" Background="#FFF1F1F1">
                                            <materialDesign:PackIcon Kind="PlusBox" Width="30" Height="30"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"/>
                                        </Button>
                                        <Button Grid.Column="3"
                                                Height="40"
                                                Margin="5"
                                                Command="{Binding DeleteConfigCommand}"
                                                CommandParameter="{Binding SelectedConfig}"
                                                ToolTip="Удалить текущую конфигурацию"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" Background="#FFF1F1F1">
                                            <materialDesign:PackIcon Kind="CloseBox" Width="30" Height="30"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"/>
                                        </Button>
                                    </Grid>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="4*"/>
                                        </Grid.ColumnDefinitions>
                                        <GroupBox Header="Категория"
                                                  Grid.Column="0"
                                                  Margin="5">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="50"/>
                                                    <RowDefinition Height="45"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="40"/>
                                                </Grid.RowDefinitions>
                                                <Button Content="Добавить категорию"
                                                        Command="{Binding NewCategoryItemCommand}"
                                                        CommandParameter="{Binding SelectedConfig}"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Stretch"
                                                        Height="35"
                                                        Margin="5"
                                                        Grid.Row="0">
                                                </Button>
                                                <StackPanel Grid.Row="1"
                                                            Orientation="Horizontal"
                                                            HorizontalAlignment="Right">
                                                    <Button Content="Импорт"
                                                            Width="70" Height="35"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Stretch"
                                                            Margin="5,0,0,5"
                                                            Command="{Binding ImportCommand}"/>
                                                    <Button Content="Экспорт"
                                                            Width="70" Height="35"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Stretch"
                                                            Margin="5,0,5,5"
                                                            Command="{Binding ExportCommand}"
                                                            CommandParameter="{Binding SelectedConfig}"/>
                                                </StackPanel>
                                                <ListView Grid.Row="2"
                                                          ItemsSource="{Binding CategoryItems}"
                                                          SelectedItem="{Binding SelectedCategoryItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                    <ListView.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <CheckBox VerticalAlignment="Center"
                                                                          IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                                          Command="{Binding DataContext.CheckBoxClickCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                                                          CommandParameter="{Binding}"
                                                                          IsEnabled="{Binding IsEnabled, Mode=TwoWay}"/>
                                                                <TextBlock Text="{Binding Name, Converter={StaticResource ToName}}"
                                                                           Margin="3"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ListView.ItemTemplate>
                                                </ListView>
                                                <Grid Grid.Row="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="2*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Button Grid.Column="0" ToolTip="Выбрать все категории"
                                                            Height="35"
                                                            Command="{Binding CheckAllCategoryItemsCommand}"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Center"
                                                            Background="#FFF1F1F1">
                                                        <materialDesign:PackIcon Kind="CheckAll" Width="30" Height="30"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                                    </Button>
                                                    <Button Grid.Column="1" ToolTip="Снять выделение"
                                                            Height="35"
                                                            Command="{Binding UnCheckAllCategoryItemsCommand}"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Center"
                                                            Background="#FFF1F1F1">
                                                        <materialDesign:PackIcon Kind="CheckBoxOutlineBlank" Width="30" Height="30"
                                                                                 HorizontalAlignment="Center"
                                                                                 VerticalAlignment="Center"/>
                                                    </Button>
                                                    <Button Grid.Column="3" ToolTip="Удалить категорию"
                                                            Height="35"
                                                            Command="{Binding DeleteCategoryItemCommand}"
                                                            CommandParameter="{Binding SelectedCategoryItem}"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Center"
                                                            Background="#FFF1F1F1">
                                                        <materialDesign:PackIcon Kind="DeleteVariant" Width="30" Height="30"
                                                                                 HorizontalAlignment="Center"
                                                                                 VerticalAlignment="Center"/>
                                                    </Button>
                                                </Grid>
                                            </Grid>
                                        </GroupBox>
                                        <GroupBox Header="Правила сопоставления"
                                                    Grid.Column="1"
                                                    Margin="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="230"/>
                                                    <ColumnDefinition Width="230"/>
                                                    <ColumnDefinition Width="50"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                                    <Label Content="Сопоставление параметров" Height="30" VerticalContentAlignment="Center" FontWeight="Medium"/>
                                                    <DataGrid ItemsSource="{Binding ParamStacks}" AutoGenerateColumns="False"
                                                              SelectedItem="{Binding SelectedParamStack, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              SelectionMode="Single" IsManipulationEnabled="True"
                                                              VerticalAlignment="Stretch" CanUserAddRows="False" CanUserDeleteRows="False"
                                                              IsSynchronizedWithCurrentItem="True"
                                                              VerticalScrollBarVisibility="Auto" MaxHeight="490"
                                                              GridLinesVisibility="All"
                                                              BorderBrush="Gray"
                                                              BorderThickness="0"
                                                              FontSize="14">
                                                        <DataGrid.CellStyle>
                                                            <!-- When the cell is selected, switching to transparent to let the row's Background be visible-->
                                                            <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsSelected" Value="True">
                                                                        <Setter Property="Background" Value="Transparent" />
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </DataGrid.CellStyle>

                                                        <DataGrid.Columns>
                                                            <DataGridTemplateColumn Header="Исходный параметр" IsReadOnly="True" CanUserResize="False" Width="*">
                                                                <DataGridTemplateColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <uc:ParamInitControl ParamStack="{Binding}"/>
                                                                    </DataTemplate>
                                                                </DataGridTemplateColumn.CellTemplate>
                                                            </DataGridTemplateColumn>

                                                            <DataGridTemplateColumn Header="Записываемый параметр" IsReadOnly="True" CanUserResize="False" Width="*">
                                                                <DataGridTemplateColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <uc:ParamTargControl ParamStack="{Binding}"/>
                                                                    </DataTemplate>
                                                                </DataGridTemplateColumn.CellTemplate>
                                                            </DataGridTemplateColumn>

                                                            <DataGridTemplateColumn Header="Статус" IsReadOnly="True"
                                                                                    CanUserResize="False" Width="80">
                                                                <DataGridTemplateColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <materialDesign:PackIcon Width="30" Height="30"
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center">
                                                                            <materialDesign:PackIcon.Style>
                                                                                <Style TargetType="materialDesign:PackIcon">
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding IsCorrect}" Value="True">
                                                                                            <Setter Property="Kind" Value="CheckOutline"/>
                                                                                            <Setter Property="Foreground" Value="#FF0EA60B"/>
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding IsCorrect}" Value="False">
                                                                                            <Setter Property="Kind" Value="AlertOctagon"/>
                                                                                            <Setter Property="Foreground" Value="#FFFE2424"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </materialDesign:PackIcon.Style>
                                                                        </materialDesign:PackIcon>
                                                                    </DataTemplate>
                                                                </DataGridTemplateColumn.CellTemplate>
                                                            </DataGridTemplateColumn>
                                                            <!--<DataGridTextColumn Binding="{Binding IsCorrect}" 
                                                                                Header="IsCorrect" IsReadOnly="True"
                                                                                CanUserResize="False" Width="100"/>-->
                                                        </DataGrid.Columns>
                                                    </DataGrid>
                                                    <TextBlock Text="{Binding SelectedParamStack.Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                                </StackPanel>

                                                <ComboBox Grid.Column="1"
                                                          Margin="10,27,5,0"
                                                          Padding="5,0"
                                                          Height="43" IsEditable="True"
                                                          VerticalAlignment="Top"
                                                          VerticalContentAlignment="Center"
                                                          ItemsSource="{Binding ParamItemsInit}"
                                                          SelectedItem="{Binding SelectedParameterItemInit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          DisplayMemberPath="Name"
                                                          IsEnabled="{Binding SelectedParamStack, Converter={StaticResource NullToBool}}"
                                                          materialDesign:HintAssist.Hint="Исходный параметр"
                                                          materialDesign:HintAssist.IsFloating="True">
                                                    <ComboBox.ItemContainerStyle>
                                                        <Style TargetType="ComboBoxItem" BasedOn="{StaticResource MaterialDesignComboBoxItemStyle}">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsType}" Value="True">
                                                                    <Setter Property="Background" Value="LightBlue"/>
                                                                </DataTrigger>

                                                                <DataTrigger Binding="{Binding IsType}" Value="False">
                                                                    <Setter Property="Background" Value="LightPink"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ComboBox.ItemContainerStyle>
                                                </ComboBox>
                                                <ComboBox Grid.Column="2"
                                                          Margin="5,27,10,0"
                                                          Padding="5,0"
                                                          Height="43" IsEditable="True"
                                                          VerticalAlignment="Top"
                                                          VerticalContentAlignment="Center"
                                                          ItemsSource="{Binding ParamItemsTarget}"
                                                          SelectedItem="{Binding SelectedParameterItemTarg, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          DisplayMemberPath="Name"
                                                          IsEnabled="{Binding SelectedParamStack, Converter={StaticResource NullToBool}}"
                                                          materialDesign:HintAssist.Hint="Целевой параметр"
                                                          materialDesign:HintAssist.IsFloating="True">
                                                    <ComboBox.ItemContainerStyle>
                                                        <Style TargetType="ComboBoxItem" BasedOn="{StaticResource MaterialDesignComboBoxItemStyle}">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsType}" Value="True">
                                                                    <Setter Property="Background" Value="LightBlue"/>
                                                                </DataTrigger>

                                                                <DataTrigger Binding="{Binding IsType}" Value="False">
                                                                    <Setter Property="Background" Value="LightPink"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ComboBox.ItemContainerStyle>
                                                </ComboBox>

                                                <TextBlock Grid.Column="1" Grid.ColumnSpan="2" 
                                                       Text="{Binding NoteText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" 
                                                       VerticalAlignment="Bottom"
                                                       FontSize="15" FontWeight="Medium"/>

                                                <ToolBarTray Orientation="Vertical"
                                                             Grid.Column="3"
                                                             Margin="0,5,0,5" HorizontalAlignment="Right"
                                                             >
                                                    <ToolBar Margin="3">
                                                        <Button Command="{Binding NewParamStackCommand}"
                                                                CommandParameter="{Binding SelectedCategoryItem}" 
                                                                Padding="5">
                                                            <materialDesign:PackIcon Kind="PlusBoxOutline" Width="30" Height="30"
                                                                 HorizontalAlignment="Stretch"
                                                                 VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                                                                 Foreground="#FF9A0F0F"/>
                                                        </Button>
                                                        <Button HorizontalContentAlignment="Center"
                                                                Command="{Binding CopyParamStackCommand}"
                                                                CommandParameter="{Binding SelectedParamStack}"
                                                                Padding="5">
                                                            <materialDesign:PackIcon Kind="ContentCopy" Width="30" Height="30"
                                                                                     HorizontalAlignment="Center"
                                                                                     VerticalAlignment="Center"
                                                                                     Foreground="#FF9A0F0F"/>
                                                        </Button>
                                                        <Button Command="{Binding DeleteParamStackCommand}"
                                                                CommandParameter="{Binding SelectedParamStack}"
                                                                HorizontalContentAlignment="Center"  Padding="5">
                                                            <materialDesign:PackIcon Kind="DeleteOutline" Width="30" Height="30"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"
                                                                 Foreground="#FF9A0F0F"/>
                                                        </Button>
                                                    </ToolBar>
                                                </ToolBarTray>
                                            </Grid>
                                        </GroupBox>
                                    </Grid>
                                    <Grid Grid.Row="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox Grid.Column="0"
                                                  Width="350"
                                                  Margin="0, 0 , 20, 0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Right"
                                                  materialDesign:HintAssist.Hint="Выберите условия обработки"
                                                  ItemsSource="{Binding ChoosePick}"
                                                  SelectedValue="{Binding ChosenPickElements, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                        </ComboBox>
                                        <Button Grid.Column="1" 
                                                Width="120"
                                                Content="Выполнить"
                                                HorizontalAlignment="Left"

                                                Margin="1" FontWeight="Bold"
                                                Command="{Binding CalculateCommand}"
                                                CommandParameter="{Binding ChosenPickElements}">
                                        </Button>
                                    </Grid>
                                </Grid>
                            </TabItem>
                            <TabItem Height="200"
                                     ToolTip="Описание работы">
                                <TabItem.Header>
                                    <materialDesign:PackIcon Kind="HelpCircleOutline" Width="50" Height="50"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"
                                                             Foreground="#FF6D6D6D"/>
                                </TabItem.Header>
                                <Grid DataContext="{StaticResource SlideVm}">
                                    <materialDesign:Transitioner ItemsSource="{Binding Slides}" SelectedIndex="{Binding SelectedIndex}">
                                        <materialDesign:Transitioner.ItemContainerStyle>
                                            <Style TargetType="materialDesign:TransitionerSlide" BasedOn="{StaticResource {x:Type materialDesign:TransitionerSlide}}">
                                                <Setter Property="OpeningEffect">
                                                    <Setter.Value>
                                                        <materialDesign:TransitionEffect Kind="SlideInFromBottom" Duration="0:0:0.5" />
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </materialDesign:Transitioner.ItemContainerStyle>
                                        <materialDesign:Transitioner.ItemTemplate>
                                            <DataTemplate>

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100" />
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="100" />
                                                    </Grid.ColumnDefinitions>

                                                    <Button Command="{x:Static materialDesign:Transitioner.MovePreviousCommand}" Content="Назад"  VerticalAlignment="Center" />

                                                    <!--<TextBlock Text="{Binding StringFormat='Slide {0}'}" FontSize="20" VerticalAlignment="Center" Grid.Column="1" HorizontalAlignment="Center" />-->
                                                    <Image Source="{Binding ., Converter={StaticResource IndexToImageConverter}, 
                                                        ConverterParameter={StaticResource ImageCollection}}" 
                                                           Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    <Button Command="{x:Static materialDesign:Transitioner.MoveNextCommand}" Content="Вперед" Grid.Column="2" VerticalAlignment="Center"/>
                                                </Grid>
                                            </DataTemplate>
                                        </materialDesign:Transitioner.ItemTemplate>
                                    </materialDesign:Transitioner>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

    </Grid>
</Window>
