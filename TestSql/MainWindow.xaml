<Window x:Class="TestSql.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TestSql.ViewModel"
        xmlns:local="clr-namespace:TestSql"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <vm:ParamStackVM x:Key="vm"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource vm}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid
        Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Label Content="Configutarion"
               VerticalAlignment="Center"
               Margin="5"/>
            <ComboBox Grid.Column="1"
                  Margin="5"/>
            <Button Content="ADD"
                Grid.Column="2"
                Margin="5"/>
            <Button Content="DEL"
                Grid.Column="3"
                Margin="5"/>
        </Grid>

        <Grid
        Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="CategoryItem"
                  Grid.Column="0"
                  Margin="5">
                <StackPanel VerticalAlignment="Stretch">
                    <ComboBox />
                    <ListView ItemsSource="{Binding CategoryItems}"
                          SelectedItem="{Binding SelectedCategoryItem, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <Button Content="Добавить категорию"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Stretch"
                        Command="{Binding NewCategoryItemCommand}"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="ParameterRules"
                    Grid.Column="1"
                    Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <Label Content="FJKFJEKFEKFKEFLEFL"/>
                        <DataGrid>
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn CanUserResize="False" Width="auto">
                                    <DataGridCheckBoxColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <CheckBox/>
                                        </DataTemplate>
                                    </DataGridCheckBoxColumn.HeaderTemplate>
                                </DataGridCheckBoxColumn>

                                <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="auto"/>

                                <DataGridComboBoxColumn Header="Исходный параметр" IsReadOnly="True" Width="*"/>

                                <DataGridTextColumn Header="Инфо" IsReadOnly="True" CanUserResize="False" Width="auto"/>

                                <DataGridComboBoxColumn Header="Целевой параметр" IsReadOnly="True" Width="*"/>

                                <DataGridTextColumn Header="Инфо" IsReadOnly="True" CanUserResize="False" Width="auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <ListView ItemsSource="{Binding ParamStacks}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TESTname}"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                    <ToolBarTray Orientation="Vertical"
                             Grid.Column="1">
                        <ToolBar>
                            <Button Content="ADD"
                                Command="{Binding NewParamStackCommand}"
                                CommandParameter="{Binding SelectedCategoryItem}"/>
                            <Button Content="COPY"/>
                            <Button Content="DEL"/>
                            <Button Content="CHE"/>
                            <Button Content="UNCH"/>
                            <Button Content="REOR"/>
                        </ToolBar>
                    </ToolBarTray>
                </Grid>
            </GroupBox>
        </Grid>

        <Grid
        Grid.Row="1" Margin="0,494,0,0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Column="0"
                  HorizontalAlignment="Right"
                  Width="170"
                  Margin="10"/>
            <Button Grid.Column="1"
                Content="ВЫПОЛНИТЬ"
                HorizontalAlignment="Left"
                Margin="10"/>
        </Grid>
    </Grid>
</Window>