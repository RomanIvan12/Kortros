<Window x:Class="ParamParser.WPF.TestWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        Height="400" Width="650"
        Title="ПЕРЕНОС ПАРАМЕТРОВ"
        Icon="/ParamParser;component/Resources/Images/logo.ico">
        <!--xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"--> 
    <Window.Resources>
        <ResourceDictionary Source="/ParamParser;component/WPF/App.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" HorizontalAlignment="Left" Width="650">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <RadioButton x:Name="CategoryPick"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Content="Для категории"
                         Margin="40,0,0,0"
                         Checked="radioButton_CheckedChanged"
                         >
                <RadioButton.Effect>
                    <DropShadowEffect
                        ShadowDepth="1"
                        Opacity="0.5" 
                        BlurRadius="0"/>
                </RadioButton.Effect>
            </RadioButton>
            <RadioButton x:Name="Selected"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Content="Для выделенных элементов"
                         Margin="0,0,0,0" 
                         Checked="radioButton_CheckedChanged">
                <RadioButton.Effect>
                    <DropShadowEffect
                        ShadowDepth="1"
                        Opacity="0.5" BlurRadius="0"/>
                </RadioButton.Effect>
            </RadioButton>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="CategoryList"
                      Grid.Column="0"
                     VerticalAlignment="Top"
                     Height="25"
                     HorizontalAlignment="Stretch"
                     Margin="10"
                     IsEditable="True"
                     DisplayMemberPath="DisplayValue"
                     SelectionChanged="CategoryList_SelectionChanged"/>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label x:Name="textColor" 
                       Grid.Row="0"
                       Content="Элементы не выбраны. Нажмите, чтобы выбрать"
                       />
                <Button x:Name="SelectElements"
                        Grid.Row="1"
                        Width="100"
                        Height="25"
                        Content="Выбрать"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="10" 
                        Click="SelectElements_Click"
                        />
            </Grid>
        </Grid>
        <GroupBox Header="Сопоставление параметра"
                  Grid.Row="3"
                  Margin="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="InitialParameters"
                          Grid.Column="0"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Margin="8"
                          IsEditable="True"
                          DisplayMemberPath="DisplayValue" 
                          SelectionChanged="InitialParameters_SelectionChanged"/>

                <ComboBox x:Name="TargetParameters"
                          Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Margin="8"
                          IsEditable="True"
                          DisplayMemberPath="DisplayValue"
                          SelectionChanged="TargetParameters_SelectionChanged"/>
            </Grid>
        </GroupBox>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="Дополнительные функции"
                      
                      Grid.Column="0"
                      Margin="8,0,0,8">
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="ReWrite"
                              Grid.Column="0"
                              Content="Перезаписать значения"

                              VerticalAlignment="Center"
                              />
                    <CheckBox x:Name="ShowLog"
                              Grid.Column="1"
                              Content="Показать отчет"

                              VerticalAlignment="Center"
                              />
                </Grid>
            </GroupBox>
            <Button x:Name="OK"
                    Content="OK"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="5,10,5,8"
                    Click="okBtn_Click"/>
            <Button x:Name="Cancel"
                    Content="Отмена"
                    Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="5,10,8,8" 
                    Click="Cancel_Click"/>
        </Grid>
    </Grid>
</Window>
